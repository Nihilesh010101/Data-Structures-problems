#include <bits/stdc++.h>

using namespace std;

int min(int a,int b){
    return a<b?a:b;
}

int main()
{
    int n,m;
    cin>>n>>m;
    vector<pair<int,int>> adj[n];
    for(int i=0;i<m;i++){
        int u,v,w;
        cin>>u>>v>>wt;
        adj[u].push_back(make_pair(v,wt));
        adj[v].push_back(make_pair(u,wt));
    }
    queue<int> q;
    int dist[n];
    bool visited[n];
    dist[0]=0;
    visited[0]=true;
    for(int i=1;i<n;i++){
        dist[i]=INT_MAX;
        visited[i]=false;
    }   
    q.push(0);
    while(!q.empty()){
        int temp=q.front();
        q.pop();
        for(auto it:adj[temp]){
            int node=it.first;
            int wt=it.second;
            dist[node]=min(dist[temp]+wt,dist[node]);
            if(visited[node]==false){
                q.push(node);
                visited[node]=true;
            }
        }
    }
    cout<<endl;
    for(int i=0;i<n;i++)
        cout<<dist[i]<<" ";

    return 0;
}
