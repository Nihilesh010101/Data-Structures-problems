#include <bits/stdc++.h>

using namespace std;

int min(int a,int b){
    return a<b?a:b;
}

int main()
{
    int n,m;
    cin>>n>>m;
    vector<int> adj[n];
    for(int i=0;i<m;i++){
        int u,v;
        cin>>u>>v;
        adj[u].push_back(v);
        adj[v].push_back(u);
    }
    queue<int> q;
    int dist[n];
    bool visited[n];
    dist[0]=0;
    visited[0]=true;
    for(int i=1;i<n;i++){
        dist[i]=INT_MAX;
        visited[i]=false;
    }   
    q.push(0);
    while(!q.empty()){
        int temp=q.front();
        q.pop();
        for(auto it:adj[temp]){
            dist[it]=min(dist[temp]+1,dist[it]);
            if(visited[it]==false){
                q.push(it);
                visited[it]=true;
            }
        }
    }
    cout<<endl;
    for(int i=0;i<n;i++)
        cout<<dist[i]<<" ";

    return 0;
}
